{% extends 'base.html.twig' %}

{% block title %}Famille{% endblock %}
{% block Montitre %}Pages listant les continents{% endblock %}

{% block body %}

{% for continent in continents %}
<h2 class="border-bottom border-primary"> <a href="{{ path('afficher_continents', {'id':continent.id}) }}">{{ continent.libelle|capitalize }} </a></h2>
    {% for animal in continent.animaux %}
        <div class="col-6">
            <div class="row align-item-center">
                <div class="col-12 col-md-6 col-lg-2 text-center">
                    <img src="image/{{animal.image}}" class="img-fluid">
                </div>
                <div class="col text-center">
                    <img src="image/{{animal.image}}" class="img-fluid">
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}
{% endblock %}