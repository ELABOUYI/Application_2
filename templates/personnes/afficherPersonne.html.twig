{% extends 'base.html.twig' %}

{% block title %}Personne{% endblock %}
{% block Montitre %}Page listant les animaux de la personne {{personne.nom}}{% endblock %}
{% block body %}
    
    {% for dispose in personne.disposes %}
    <h2>Liste des animaux possédés : </h2>
     
        <div class="col-6">
            <div class="row align-item-center">
                <div class="col-12 cold-md-6 col-lg-2 text-center">
                    <img src="{{asset('images/' ~ dispose.animal.image)}}" class="img-fluid">
                </div>
                <div class="col text-center">
                    <h2> <a href="{{path('afficher_animal', {'id': dispose.animal.id})}}"> {{dispose.animal.nom}} </a> </h2>
                    <div class="btn btn-warning">{{ dispose.nb }}</div>
                </div>
                
            </div>
        </div>
    {% endfor %}    

{% endblock %}
